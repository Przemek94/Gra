<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#30bbee">
    tools:context="com.example.ziom.jtr.Menu">

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Nowa Gra"
        android:background="@drawable/shape"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:onClick="New_Game"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Najlepszy Wynik"
        android:id="@+id/Najlepszy"
        android:background="@drawable/shape"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:onClick="Wynik"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Pomoc"
        android:id="@+id/button3"
        android:background="@drawable/shape"
        android:onClick="Help"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Najlepszy"
        android:layout_alignLeft="@+id/Najlepszy"
        android:layout_alignStart="@+id/Najlepszy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/nick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyloguj"
        android:background="@drawable/shape"
        android:id="@+id/logout"
        android:onClick="logout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
